<% layout('layouts/boilerplate')%>


    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow">
                    <!-- image -->
                    <!-- <img class="img-fluid card-img-top"
                        src="https://images.unsplash.com/photo-1457530378978-8bac673b8062?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NTJ8fGZhcm1lcnxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60"
                        alt=""> -->
                    <div class="card-body">
                        <h5 class="card-title">Edit Farm</h5>
                        <form action="/farms/<%=farm._id%>?_method=PUT" method="POST" novalidate
                            class="needs-validation">
                            <div class="mb-3">
                                <label class="form-label" for="name">Farm name</label>
                                <input class="form-control" type="text" id="name" name="farm[name]"
                                    placeholder="farm name" value="<%=farm.name%>" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="city">City</label>
                                <input class="form-control" type="text" id="city" name="farm[city]"
                                    placeholder="city name" value="<%=farm.city%>" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">E-mail</label>
                                <input class="form-control" type="email" id="email" name="farm[email]"
                                    placeholder="e-mail" value="<%=farm.email%>" required>
                            </div>
                            <button class="btn btn-success">Save Changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>