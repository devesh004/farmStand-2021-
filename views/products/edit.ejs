<% layout('layouts/boilerplate')%>

    <div class="container mt-5">
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3">
                <h1>
                    Edit Product
                </h1>
                <div class="card shadow">
                    <form novalidate class="needs-validation" action="/products/<%=product.id%>?_method=PUT"
                        method="POST">
                        <div class="card-body">
                            <label class="form-label" for="name">Product name</label>
                            <input class="form-control mb-2" type="text" id="name" name="product[name]"
                                placeholder="product name" value="<%=product.name%> " required>
                            <label class="form-label" for="price">Price(unit)</label>
                            <input class="form-control mb-2" type="text" id="price" name="product[price]"
                                placeholder="price" value="<%=product.price%> " required>
                            <label class="form-label" for="category">Change Category</label>
                            <select id="category" name="product[category]">
                                <% for(let category of categories){ %>
                                    <option value="<%=category%>" <%=product.category===category ? 'selected' :''%>>
                                        <%=category%>
                                    </option>
                                    <% } %>
                            </select>
                            <div class="card-body">
                                <button class="btn btn-success mb-2">Update Product</button>
                                <a class="btn btn-primary mb-2" href="/products/<%=product._id%>">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>












