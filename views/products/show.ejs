<% layout('layouts/boilerplate')%>


    <div class="container-fluid mt-5">
        <div class="row text-center ">
            <div class="d-flex justify-content-sm-center">
                <div class="card" style="width: 32rem;">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=product.name %>
                        </h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"> Price: $<%=product.price%>
                        </li>
                        <li class="list-group-item">Category: <a href="/products?category=<%=product.category%>">
                                <%=product.category%>
                            </a></li>
                        <li class="list-group-item">
                            Farm: <a href="/farms/<%=product.farm._id%>">
                                <%=product.farm.name%>
                            </a>
                        </li>
                    </ul>
                    <% if(currUser && product.farm.creator.equals(currUser._id)) {%>
                        <div class="card-body">
                            <a href="/products/<%=product._id%>/edit" class="card-link btn btn-success ">Edit
                                Product</a>
                            <form class="d-inline" action="/products/<%=product._id%>?_method=delete" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>